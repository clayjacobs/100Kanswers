<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Birthday</th>
      <th>Email</th>
      <th>State</th>
      <th>Gender</th>
      <th>Education</th>
      <th>Marital</th>
      <th>Children</th>
      <th>Job</th>
      <th>Income</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.firstname %></td>
        <td><%= person.lastname %></td>
        <td><%= person.birthday %></td>
        <td><%= person.email %></td>
        <td><%= person.state %></td>
        <td><%= person.gender %></td>
        <td><%= person.education %></td>
        <td><%= person.marital %></td>
        <td><%= person.children %></td>
        <td><%= person.job %></td>
        <td><%= person.income %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

